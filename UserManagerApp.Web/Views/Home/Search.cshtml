@using UserManagerApp.Web.DTOs
@model List<UserDTO>

@{
    ViewData["Title"] = "Búsqueda de usuarios";
}

<h1 class="mb-4">Búsqueda de usuarios</h1>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().IdUser)</th>
            <th>@Html.DisplayNameFor(model => model.First().NameUser)</th>
            <th>@Html.DisplayNameFor(model => model.First().BirthDate)</th>
            <th>@Html.DisplayNameFor(model => model.First().Gender)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.IdUser</td>
                <td>@user.NameUser</td>
                <td>@user.BirthDate.ToString("yyyy-MM-dd")</td>
                <td>@user.Gender</td>
                <td>
                    <a asp-controller="Usuario" asp-action="Editar" asp-route-id="@user.IdUser" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-controller="Usuario" asp-action="Eliminar" asp-route-id="@user.IdUser" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
